<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckEmployeeTasks_Activity">

    <TextView
        android:id="@+id/tvcheckemployeetasks"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginTop="52dp"
        android:text="Tasks returned to you by your employees/students"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/ReturnedTasksList"
        android:layout_width="345dp"
        android:layout_height="496dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvcheckemployeetasks" />
</androidx.constraintlayout.widget.ConstraintLayout>