<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourTasks_Activity">

    <Button
        android:id="@+id/btncreatenewtask"
        android:layout_width="221dp"
        android:layout_height="64dp"
        android:layout_marginBottom="44dp"
        android:onClick="Createnewtask"
        android:text="create a new task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvYourTasks"
        android:layout_width="278dp"
        android:layout_height="42dp"
        android:layout_marginTop="48dp"
        android:text="Here are your tasks"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/mytaskslist"
        android:layout_width="418dp"
        android:layout_height="434dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toTopOf="@+id/btncreatenewtask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYourTasks"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>